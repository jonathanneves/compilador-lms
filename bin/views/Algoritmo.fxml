<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AlgoritmoController">
   <top>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Compilador" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="34.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="5.0" top="5.0" />
         </BorderPane.margin>
      </Text>
   </top>
   <left>
      <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Algoritmo">
               <content>
                  <AnchorPane>
                     <children>
                        <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <HBox alignment="CENTER" prefHeight="40.0" spacing="10.0">
                                 <children>
                                    <Button mnemonicParsing="false" onAction="#abrirArquivo" prefHeight="25.0" prefWidth="220.0" text="Abrir" />
                                    <Button mnemonicParsing="false" onAction="#analisarAlgoritmo" prefHeight="25.0" prefWidth="220.0" text="Compilar">
                                       <font>
                                          <Font name="Arial" size="15.0" />
                                       </font>
                                    </Button>
                                 </children>
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                              </HBox>
                              <TextArea fx:id="txtAreaAlgoritmo" prefHeight="581.0" prefWidth="766.0" promptText="Digite aqui o algoritmo..." wrapText="true" />
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </AnchorPane>
               </content>
            </Tab>
          <Tab fx:id="tabResultado" text="Resultado">
               <content>
                  <AnchorPane>
                     <children>
                        <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <TableView fx:id="tableViewResultado" prefHeight="453.0" prefWidth="776.0">
                                <columns>
                                  <TableColumn fx:id="columnCodigo" prefWidth="113.0" text="Código" />
                                  <TableColumn fx:id="columnToken" prefWidth="184.0" text="Token" />
                                    <TableColumn fx:id="columnDescricao" prefWidth="371.0" text="Descrição" />
                                    <TableColumn fx:id="columnLinha" prefWidth="95.0" text="Linha" />
                                </columns>
                                 <padding>
                                    <Insets left="5.0" right="5.0" top="5.0" />
                                 </padding>
                              </TableView>
                              <TextArea fx:id="textAreaErros" prefHeight="178.0" prefWidth="776.0" promptText="Complador LMS - 2019">
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                                 <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                 </padding>
                              </TextArea>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </left>
</BorderPane>
